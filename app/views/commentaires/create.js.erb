function add(newCom, where, addHTML) {
  const com = document.getElementById(newCom);
  com.insertAdjacentHTML(where, addHTML);
}

if (document.querySelector("#comments")) {
  add('comments', 'beforeend', '<%= j render "commentaires/contenu", commentaire: @commentaire %>');
}

function change(id, Nb) {
  const nb = document.getElementById(id);
  nb.innerHTML = Nb;
}

if (document.querySelector("#fiabilite")) {
  change('fiabilite', '<%= j render "commentaires/fiabilite", commentaire: @commentaire %>');
}

if (document.querySelector("#zone")) {
  change('zone', '<%= j render "commentaires/zone", commentaire: @commentaire %>');
}

if (document.querySelector("#first")) {
  change('first', '<%= j render "commentaires/first", commentaire: @commentaire %>');
}
