<h1>Ville : <%= @ville.name %></h1>
<h1>Registre : <%= @registre.nature %></h1>
<% if @registre.anneededebut != @registre.anneedefin %>
  <h1>Période : <%= @registre.anneededebut + "-" + @registre.anneedefin %>
<% else %>
  <h1>Année : <%= @registre.anneededebut %>
<% end %>
<h1>Côte: <%= @registre.cote%></h1>
<%= link_to "<i class='fas fa-edit'></i>".html_safe, edit_registre_path(@registre) %>
<%= link_to "<i class='fas fa-trash-alt'></i>".html_safe, registre_path(@registre), method: :delete, data: { confirm: "Voulez-vous vraiment supprimer?"} %></h1>
<br>
<br>
<br>
<% if @registre.actes.count == 0 %>
  <p>Pas d'acte pour cette ville</p>
<% else %>
  <p>
    <%= @registre.actes.count %> <%= if @registre.actes.count == 1 then "acte disponible" else "actes disponibles" end %> pour le registre des <%= @registre.nature.downcase %> de la ville de <%= @ville.name %> pour
  <% if @registre.anneededebut == @registre.anneedefin %>
      l'année <%= @registre.anneededebut %></p>
    <% else %>
      la période <%= @registre.anneededebut %> - <%= @registre.anneedefin %>
    <% end %>
  </p>
<% end %>


<% @actes.where(registre_id: @registre.id).each do |acte| %>
  <p>
  <% if ["Mariages", "Publications de mariage", "Divorces"].include?(acte.categorie) %>
    <% acte.personnes.each do |personne| %>
      <%= link_to personne.nom.upcase + " " + personne.prenom.capitalize + ", " + acte.categorie + ", " + acte.datederedaction.to_s, acte_path(acte) %>
    <% end %>
  <% else %>
    <% acte.personnes.each do |personne| %>
      <%= link_to personne.nom.upcase + " " + personne.prenom.capitalize  + ", " + acte.categorie + ", " + acte.datederedaction.to_s, acte_path(acte) %>
    <% end %>
  <% end %>
  <%= link_to "<i class='fas fa-edit'></i>".html_safe, edit_acte_path(acte) %><%= link_to "<i class='fas fa-trash-alt'></i>".html_safe, acte_path(acte), method: :delete, data: { confirm: "Voulez-vous vraiment supprimer?"} %>
  </p>
<% end %>

<br>
<br>
<br>
<p><%= link_to "Créer un acte pour ce registre", new_ville_registre_acte_path(@ville, @registre) %></p>
<p><%= link_to "Tous les Registres de " + @ville.name, ville_registres_path %></p>

