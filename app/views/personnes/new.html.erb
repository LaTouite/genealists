<% if ["Mariages", "Publications de mariage", "Divorces"].include?(@acte.categorie) %>
  <%= simple_form_for([@acte, @personne], remote: true) do |f| %>
    <%= f.input :nom %>
    <%= f.input :prenom %>
    <%= f.button :submit, "Créer" %>
  <% end %>

  <%= simple_form_for([@acte, @personne], remote: true) do |f| %>
    <%= f.input :nom %>
    <%= f.input :prenom %>
    <%= f.button :submit, "Créer" %>
  <% end %>
<% else %>
  <%= simple_form_for([@acte, @personne], remote: true) do |f| %>
    <%= f.input :acteur, as: :radio_buttons, collection: ["principal", "secondaire"] %>
    <%= f.input :nom %>
    <%= f.input :prenom %>
    <%= f.input :role %>
    <%= f.button :submit, "Créer" %>
  <% end %>
<% end %>
